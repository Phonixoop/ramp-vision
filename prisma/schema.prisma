generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlserver"
    url      = env("DATABASE_URL")
}

model User {
    id           String    @id @default(cuid())
    name         String?
    username     String    @unique
    password     String
    description  String?
    is_active    Boolean   @default(true)
    image_url    String?
    display_name String?
    created_at   DateTime  @default(now())
    updated_at   DateTime?
    roleId       String?
    sessions     Session[]
    role         Role?     @relation(fields: [roleId], references: [id])

    @@map("users")
}

model Role {
    id          String @id @default(cuid())
    name        String
    permissions String @db.Text
    users       User[]

    @@unique([name])
    @@index([name])
    @@map("roles")
}

model Session {
    id           String   @id @default(cuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    users        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@map("sessions")
}

model Verification_token {
    id         String   @id @default(cuid())
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
    @@map("verification_tokens")
}

model MonthWorkDay {
    id         String   @id @default(cuid())
    year       Int
    month      Int // 1-12 for Persian months
    work_days  Int // Number of work days in the month
    created_at DateTime @default(now())
    updated_at DateTime @updatedAt

    @@unique([year, month])
    @@map("month_work_days")
}
